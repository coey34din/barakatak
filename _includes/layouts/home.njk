---
layout: layouts/base.njk
section: home
---
<div class="slider">
    {% include "components/slider.njk" %}	
</div>
<div  class="main-blok">
    <div class="wrapper">
        {% include "components/iklan.njk" %}	
        {% include "components/search.njk" %}
        <div class="main-cont-left">
            <div class="cont-home">
                {{ layoutContent | safe }}
            </div>
            <div class="row">


<div class="col-12 tips">        
    <div class="row">
    {% set postslist = collections.tips %}
    {% set a = 0 %}     
    {% for post in postslist | reverse %}
        {% if a < 8 %}
            {%set a = a + 1 %}                    
                <div {% if post.url == url %} data-current="current item"{% endif %} class="post-list-tips col-lg-3 col-md-4 col-sm-6">
                <a href="{{ post.url | url }}">
                    {% if post.data.thumbnail %}
                        <img src="{{ url }}{{ post.data.thumbnail }}" alt="post.data.title">
                        {% else %}
                            <img src="{{ '/' | url }}static/img/no-image.png" alt="thumbnails">
                    {% endif %}	
                    <div class="list-detail">
                        <h2>								
                            {% if post.data.title %}								
                                {{ post.data.title }}
                            {% else %}
                                Untitled
                            {% endif %}								
                        </h2> 
                        <p class="meta-entry">
                            <time datetime="{{ post.date | machineDate }}">
                                <span class="post-date">                    
                                    {{ post.date | readableDate }}
                                </span>
                            </time> 
                        </p>                              
                    </div>
                </a>
            </div>      
        {% endif %}
    {% endfor %}                 
    </div>
</div>


            </div>
        </div>
        <div class="main-cont-right">
            {% include "components/contentright.njk" %}            
        </div>
    </div>
</div>
<script>
    $(function () {
      // Slideshow 1
        $("#slider1").responsiveSlides({
            auto: true,
            pager: true,
            nav: true,
            speed: 500,
            maxwidth: 1200,
            namespace: "centered-btns"
        });
    });
</script>
