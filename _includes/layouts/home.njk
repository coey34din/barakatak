---
layout: layouts/base.njk
section: home
---
<div class="slider">
    {% include "components/slider.njk" %}	
</div>
<div  class="main-blok">
    <div class="wrapper">
        {% include "components/iklan.njk" %}	
        {% include "components/search.njk" %}
        <div class="main-cont">
            <div class="main-left">
                {{ layoutContent | safe }}
            </div>
            <div class="main-right">
                {% set galeryslist = collections.videos %} 
                <h3>VIDEO TERBARU</h3>
                <div class="row-glr">
                    {% set a = 0 %}     
                    {% for post in galeryslist | reverse %}
                        {% if a < 6 %}
                            {%set a = a + 1 %}
                            <aside {% if post.url == url %} data-current="current item"{% endif %} class="thumb-gallery">
                                <a href="{{ post.url | url }}">
                                    {% if post.data.thumbnail %}
                                        <img  src="{{ url }}{{ post.data.thumbnail }}" alt="post.data.title">
                                        {% else %}
                                            <img src="{{ '/' | url }}static/img/no-image.png" alt="thumbnails">
                                    {% endif %}		
                                </a>
                            </aside>
                        {% endif %}
                    {% endfor %}  
                </div>
            </div>
        </div>
        <div class="main-cont">
            {% include "components/contentright.njk" %}            
        </div>
    </div>
</div>
<script>
    $(function () {
      // Slideshow 1
        $("#slider1").responsiveSlides({
            auto: true,
            pager: true,
            nav: true,
            speed: 500,
            maxwidth: 1200,
            namespace: "centered-btns"
        });
    });
</script>
