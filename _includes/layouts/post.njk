---
layout: layouts/base.njk
section: post
---
<div class="b-content blog"></div>
<div  class="main-blok">
    <div class="wrapper">
        {% include "components/search.njk" %}
        <article>
        <h1>{{ title }}</h1>
        <p class="meta-entry">
        <time datetime="{{ date | machineDate }}">
            <span class="post-date">                    
                {{ date | readableDate }}
            </span>
        </time>            
            <span class="author">
                by <strong>{{ metadata.author.name }}</strong>
            </span>                  
    </p>

        {{ layoutContent | safe }}

        {% set bukan = ['artikel','blog','profil','galeri','posts','post'] %}
        {% if tags %}
            <p>
            {% for tag in tags %}
                {% if tag not in bukan %}
                {% set tagUrl %}/tags/{{ tag | urlencode }}/{% endset %}
                <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
                {%- endif -%}
            {% endfor %}
            </p>
        {% endif %}

        </article>
        <div class="share-page">
        <ul>
            <li>Share this on &rarr;</li>
            <li>
                <a class="btn-share" href="https://twitter.com/intent/tweet?text={{ page.title }}&url={{ site.url }}{{ page.url }}&via={{ author.twitter.name }}&related={{ author.twitter.name }}" aria-label="twitter" rel="nofollow" target="_blank" title="Share on Twitter">
                    <svg fill="currentColor" role="img" aria-hidden="true">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{ '/' | url }}static/img/icon-library.svg#icon-twitter"></use>
                    </svg>
                </a>
            </li>
            <li>
                <a class="btn-share" href="https://facebook.com/sharer.php?u={{ site.url }}{{ page.url }}" aria-label="facebook" rel="nofollow" target="_blank" title="Share on Facebook">
                <svg fill="currentColor" role="img" aria-hidden="true">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{ '/' | url }}static/img/icon-library.svg#icon-facebook"></use>
                </svg>
            </a></li>
        </ul>
        </div>
        <nav>
            {% if tags %}
                {% for tag in tags %}
                    {% if tag in bukan %}
                        <a href="{{ site.url }}/{{ tag }}/">‚Üê {{ tag }} index</a>
                    {%- endif -%}
                {% endfor %}
            {% endif %}
        </nav>
    </div>
</div>