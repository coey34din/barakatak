    {%- set absolutePageUrl %}{{ page.url | url | absoluteUrl(site.url) }}{% endset -%}
    {% set isPost = section == 'post' %}
    <script type="application/ld+json">
    {
        "@context": "http://schema.org",
        {% if isPost -%}
        "@type": "BlogPosting",
        {% else -%}
        "@type":"WebSite",
        {% endif -%}
        "url":"{{ absolutePageUrl }}",
        {% if thumbnail -%}
        "image":"{{ thumbnail | absoluteUrl(site.url) }}",
        {% else -%}
        "image": "{{ site.logo }}"
        {% endif -%}
        "headline":"{{title or site.title}}",
        "description": "{{description or site.description}}",
        "author": {
            "@type": "Person",
            "name": "{{ author.name }}",
            "sameAs":[
                "{{ author.twitter.url }}",
                "{{ author.instagram.url }}",
                "{{ author.linkedin.url }}",
                "{{ author.github.url }}"
            ]
        }
    }
    </script>