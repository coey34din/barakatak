<section class="m-footer">
<div class="wrapper"> 
     {% set postslist = collections.blog %}
     {% set articleslist = collections.artikel %} 
     {% set galeryslist = collections.galeri %} 
     <div class="box-footer">
          <h3>BLOG TERBARU</h3>

          {% set a = 0 %}
          {% for post in postslist | reverse %}
               {% if a < 6 %}
               {%set a = a + 1 %}
               <aside {% if post.url == url %} data-current="current item"{% endif %}>
                    <h3>
                         <a href="{{ post.url | url }}">
                              {% if post.data.title %}                                             	
                                   {{ post.data.title }}
                              {% else %}
                                   Untitled
                              {% endif %}
                         </a>
                    </h3>
                    <p class="meta-entry">
                         <time datetime="{{ post.date | machineDate }}">
                              <span class="post-date">                    
                                   {{ post.date | readableDate }}
                              </span>
                         </time>
                         <span class="author">
                              by <strong>{{ metadata.author.name }}</strong>
                         </span>
                    </p>
               </aside>
               {%endif%}
          {% endfor %}
     </div>


