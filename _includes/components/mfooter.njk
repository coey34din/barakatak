                                             Untitled
                                        {% endif %}
                                   </a>
                              <p class="meta-entry">
                                   <time datetime="{{ post.date | machineDate }}">
                                        <span class="post-date">                    
                                             {{ post.date | readableDate }}
                                        </span>
                                   </time>
                                   <span class="author">
                                        by <strong>{{ author.name }}</strong>
                                   </span>
                              </p>
                         </li>
                         {%endif%}
                    {% endfor %}       
                    </ul>           
               </div>             
     </div>
</div>