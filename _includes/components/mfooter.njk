                                             {% if post.data.title %}                                             	
                                                  {{ post.data.title }}
                                             {% else %}
                                                  Untitled
                                             {% endif %}
                                        </a>
                                   <p class="meta-entry">
                                        <time datetime="{{ post.date | machineDate }}">
                                             <span class="post-date">                    
                                                  {{ post.date | readableDate }}
                                             </span>
                                        </time>
                                        <span class="author">
                                             by <strong>{{ author.name }}</strong>
                                        </span>
                                   </p>
                              </li>                    
                         {%endif%}
                    {% endfor %} 
                    </ul>                   
               </div>
               <div class="site-map-group">
                    <input id="group-tiga" type="checkbox">  
                    <label class="site-map-group-title" for="group-tiga">TIPS TERBARU</label>  
