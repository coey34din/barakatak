<div class="wrapper"> 
     {% include "components/tagc.njk" %}
     <div class="footer-site-map">
               {% set postslist = collections.blog | head(-3) %}
               {% set articleslist = collections.artikel | head(-3) %} 
               {% set tipslist = collections.tips | head(-3) %} 
               {% set galeryslist = collections.galeri | head(-3) %} 
               <div class="site-map-group"> 
                    <input id="group-satu" type="checkbox">               
                    <label class="site-map-group-title" for="group-satu">BLOG TERBARU</label>
                    <ul class="site-map-group-list">  
                    {% set a = 0 %}
                    {% for post in postslist | reverse %}
                         {% if a < 4 %}
                         {%set a = a + 1 %}
                         <li {% if post.url == url %} data-current="current item"{% endif %}  class="site-map-group-item">
                                   <a class="site-map-link"  href="{{ post.url | url }}">
                                        {% if post.data.title %}                                             	
                                             {{ post.data.title }}
                                        {% else %}
                                             Untitled
                                        {% endif %}
                                   </a>
                              <p class="meta-entry">
                                   <time datetime="{{ post.date | machineDate }}">
                                        <span class="post-date">                    
                                             {{ post.date | readableDate }}
                                        </span>
                                   </time>
                                   <span class="author">
                                        by <strong>{{ author.name }}</strong>
                                   </span>
                              </p>
                         </li>
                         {%endif%}
                    {% endfor %}
                    </ul>
               </div>


               <div class="site-map-group">
                    <input id="group-dua" type="checkbox"> 
                    <label class="site-map-group-title" for="group-dua">ARTIKEL TERBARU</label>
                    <ul class="site-map-group-list">         
                    {% set b = 0 %}             
                    {% for post in articleslist | reverse %}
                         {% if b < 4 %}
                         {%set b = b + 1 %}                     
                              <li {% if post.url == url %} data-current="current item"{% endif %}  class="site-map-group-item">
